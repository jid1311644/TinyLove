                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">
                    <TextView 
                        android:id="@+id/check_morning_out"
                        android:layout_width="50dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="打卡"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:background="@drawable/checkin_background"
                		android:clickable="true"/>
                    <ImageView 
                        android:id="@+id/check_morning_in_image"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/checkin"/>
                    <View 
                        android:id="@+id/check_morning_in_space"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                    <TextView 
                        android:id="@+id/check_morning_in_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22"
                        android:textSize="16sp"
                        android:textColor="@color/themeColor"/>
                    <TextView 
                        android:id="@+id/check_morning_in_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="次"
                        android:textSize="16sp"
                        android:textColor="@color/textColor"/>
