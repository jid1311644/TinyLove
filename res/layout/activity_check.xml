                    android:id="@+id/check_image_morning"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/checkin_morning"
                    android:layout_centerVertical="true"/>
