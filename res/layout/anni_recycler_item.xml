<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@drawable/btn_selector">
	    
	    <LinearLayout
		    android:id="@+id/anni_recycler_item_picture"
		    android:layout_width="60dp"
		    android:layout_height="69dp"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:background="#ffffff">
		    <TextView 
		        android:id="@+id/anni_recycler_item_text_day"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="gone"
		        android:text="24"
		        android:textColor="#ffffff"
		        android:textSize="30sp"
		        android:textStyle="bold"/>
		    <TextView 
		        android:id="@+id/anni_recycler_item_text_yearmonth"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="gone"
		        android:text="2017 八月"
		        android:textColor="#ffffff"
		        android:textSize="12sp"/>
		    <ImageView android:id="@+id/anni_recycler_item_back_picture"
		        android:layout_width="24dp"
		        android:layout_height="24dp"
		        android:src="@drawable/anni_birthday_icon"/>
		</LinearLayout>
		
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent">
		    <TextView 
			    android:id="@+id/anni_recycler_item_content"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:gravity="center_vertical"
			    android:layout_marginLeft="20dp"
			    android:layout_alignParentLeft="true"
			    android:text="我们在一起已经"
                android:textColor="@color/anniTextColor"
			    android:textSize="16sp"/>
		    <TextView 
		        android:id="@+id/anni_recycler_item_day"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
			    android:gravity="center_vertical"
			    android:visibility="gone"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="20dp"
		        android:text="天"
                android:textColor="@color/anniTextColor"
		        android:textSize="14sp"/>
		    <TextView 
		        android:id="@+id/anni_recycler_item_days"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginBottom="6dp"
			    android:gravity="center_vertical"
			    android:visibility="gone"
		        android:layout_toLeftOf="@id/anni_recycler_item_day"
		        android:layout_marginRight="6dp"
		        android:text="56"
                android:textColor="@color/anniTextColor"
		        android:textSize="30sp"
		        android:textStyle="bold"/>
		    
		    <ImageView 
		        android:id="@+id/anni_recycler_item_add_event"
		        android:layout_width="24dp"
		        android:layout_height="24dp"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="24dp"
		        android:layout_centerVertical="true"
		        android:src="@drawable/anni_add_event"/>
		    
		</RelativeLayout>
	    
	</LinearLayout>
	
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#e9e9e9"/>
    
</LinearLayout>
