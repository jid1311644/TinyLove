<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anni_bg_large_1"
    android:fitsSystemWindows="true"
    android:id="@+id/check_anni_background"
    tools:context="com.example.tinylove.CheckAnniActivity" >

    <RelativeLayout
        android:id="@+id/add_anni_background_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@null"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/check_anni_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/anni_detail_back_icon" />
        <ImageView 
            android:id="@+id/check_anni_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/anni_detail_edit_icon"/> 
    </RelativeLayout>
    
    <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">
            <TextView 
            	android:id="@+id/check_anni_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离我们第一次接吻已经"
                android:textColor="#ffffff"
                android:textSize="24sp"/>
            <View 
                android:layout_width="2dp"
                android:layout_height="20dp"/>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView 
            		android:id="@+id/check_anni_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textColor="#ffffff"
                    android:textSize="80sp"
                    android:textStyle="bold"/>
                <View 
                    android:layout_width="6dp"
                    android:layout_height="2dp"/>
                <ImageView 
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:paddingTop="30dp"
                    android:gravity="top"
                    android:src="@drawable/anni_header_days_icon"/>
            </LinearLayout>
            <View 
                android:layout_width="2dp"
                android:layout_height="20dp"/>
            <TextView 
            	android:id="@+id/check_anni_text3"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="目标日:2018-1-1 星期一"
            	android:textColor="#ffffff"
            	android:textSize="14sp"
            	android:textStyle="bold"/>
        </LinearLayout>
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal">
        <ImageView 
            android:id="@+id/check_anni_change_background"
            android:layout_width="110dp"
            android:layout_height="66dp"
            android:src="@drawable/anni_detail_change_bg_icon"/>
    </LinearLayout>

</RelativeLayout>
