<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.tinylove.UserEditActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/themeColor">
        <ImageView
            android:id="@+id/user_edit_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/icon_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="修改资料"
            android:layout_centerInParent="true"/>
        <TextView 
            android:id="@+id/user_edit_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="完成"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/backColor"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">
        
        <LinearLayout 
            android:id="@+id/rll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_line_name"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/user_psw"/>
            <View 
                android:layout_width="6dp"
                android:layout_height="match_parent"/>
            <View 
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:background="@color/lineColor"/>
            <View 
                android:layout_width="6dp"
                android:layout_height="match_parent"/>
            <EditText 
                android:id="@+id/user_edit_psw"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:maxLength="20"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:textSize="16sp"/>
        </LinearLayout>
        
        <View 
            android:id="@+id/name_line_psw"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/rll3"
            android:background="@color/lineColor"/>
        
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backColor"/>

</LinearLayout>
