<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/themeColor"
    android:fitsSystemWindows="true"
    tools:context="com.example.tinylove.AnniEditActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/themeColor">
        <ImageView
            android:id="@+id/anni_edit_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/icon_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="编辑纪念日"
            android:layout_centerInParent="true"/>
        <TextView 
            android:id="@+id/anni_edit_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="完成"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backColor">
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="24dp"/>
	    
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="@color/pressColor"/>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="#ffffff"
	        android:orientation="horizontal">
	        <View 
	            android:layout_width="24dp"
	            android:layout_height="50dp"/>
	        <ImageView
	            android:id="@+id/anni_edit_select_color"
	            android:layout_width="20dp"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/event_color_1"/>
	        <View 
	            android:layout_width="10dp"
	            android:layout_height="50dp"/>
	        <EditText 
	            android:id="@+id/anni_edit_event_name"
	            android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:layout_gravity="center_vertical"
	            android:background="@null"
	            android:hint="点击输入纪念日内容"
	            android:textColor="@color/anniTextColor"
	            android:textSize="16sp"/>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:orientation="horizontal">
	        <View 
		        android:layout_width="50dp"
		        android:layout_height="0.5dp"
		        android:background="#ffffff"/>
	        <View 
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:background="@color/pressColor"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:orientation="horizontal"
	        android:background="#ffffff"
	        android:gravity="center_vertical">
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="24dp"
	            android:layout_weight="1"/>
	        <ImageView 
	            android:id="@+id/anni_edit_select_1"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:layout_height="24dp"
	            android:src="@drawable/add_event_color_1"
	            android:clickable="true"/>
	        <ImageView 
	            android:id="@+id/anni_edit_select_2"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:layout_height="24dp"
	            android:src="@drawable/event_color_2"
	            android:clickable="true"/>
	        <ImageView 
	            android:id="@+id/anni_edit_select_3"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:layout_height="24dp"
	            android:src="@drawable/event_color_3"
	            android:clickable="true"/>
	        <ImageView 
	            android:id="@+id/anni_edit_select_4"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:layout_height="24dp"
	            android:src="@drawable/event_color_4"
	            android:clickable="true"/>
	        <ImageView 
	            android:id="@+id/anni_edit_select_5"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:layout_height="24dp"
	            android:src="@drawable/event_color_5"
	            android:clickable="true"/>
	        <ImageView 
	            android:id="@+id/anni_edit_select_6"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:layout_height="24dp"
	            android:src="@drawable/event_color_6"
	            android:clickable="true"/>
	        <ImageView 
	            android:id="@+id/anni_edit_select_7"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:layout_height="24dp"
	            android:src="@drawable/event_color_7"
	            android:clickable="true"/>
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="24dp"
	            android:layout_weight="1"/>
	    </LinearLayout>
	    
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="@color/pressColor"/>
	    
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="24dp"/>
	    
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="@color/pressColor"/>
	    
	    <RelativeLayout 
	        android:id="@+id/anni_edit_rl_time"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/btn_selector"
	        android:gravity="center_vertical"
	        android:clickable="true">
	        <ImageView 
	            android:layout_width="20dp"
	            android:layout_height="match_parent"
	            android:layout_marginStart="24dp"
	            android:gravity="center_vertical"
	            android:src="@drawable/add_anni_time"/>
	        <TextView 
	            android:id="@+id/anni_edit_text_time"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:layout_marginStart="60dp"
	            android:textColor="@color/anniTextColor"
	            android:textSize="16sp"
	            android:text="点击这里选择日期"/>
	        <com.example.tinylove.View.SwitchView
	            android:id="@+id/anni_edit_time_switch"
	            android:layout_width="46dp"
		        android:layout_height="wrap_content"
		        android:layout_alignParentEnd="true"
		        android:layout_marginEnd="24dp"
		        android:layout_centerVertical="true" />
	    </RelativeLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:orientation="horizontal">
	        <View 
		        android:layout_width="50dp"
		        android:layout_height="0.5dp"
		        android:background="#ffffff"/>
	        <View 
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:background="@color/pressColor"/>
	    </LinearLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/anni_edit_rl_remind"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/btn_selector"
	        android:clickable="true">
	        <ImageView 
	            android:layout_width="20dp"
	            android:layout_height="match_parent"
	            android:layout_marginStart="24dp"
	            android:gravity="center_vertical"
	            android:src="@drawable/add_anni_remind"/>
	        <TextView 
	            android:id="@+id/anni_edit_text_remind"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:layout_marginStart="60dp"
	            android:textColor="@color/anniTextColor"
	            android:textSize="16sp"
	            android:text="提醒"/>
	        <ImageView 
	            android:id="@+id/anni_edit_remind_right"
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentEnd="true"
	            android:layout_marginEnd="16dp"
	            android:src="@drawable/right"/>
	        <TextView 
	            android:id="@+id/anni_edit_remind_frequent"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toStartOf="@id/anni_edit_remind_right"
	            android:layout_marginEnd="10dp"
	            android:layout_centerVertical="true"
	            android:textSize="14sp"
	            android:textColor="@color/anniTextColor"
	            android:text="无"/>
	    </RelativeLayout>
	    
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="@color/pressColor"/>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="24dp"/>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="@color/pressColor"/>
	    
	    <RelativeLayout 
	        android:id="@+id/anni_edit_rl_delete"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/btn_selector"
	        android:clickable="true">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:layout_centerInParent="true"
	            android:textSize="16sp"
	            android:text="删  除"
	            android:textColor="#fd3d3a"/>
	    </RelativeLayout>
	    
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="@color/pressColor"/>
        
    </LinearLayout>
        

</LinearLayout>
