<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="#ffffff"
    tools:context="com.example.tinylove.SelectTimeDialog" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="    请选择日期" 
        android:textColor="@color/themeColor"
        android:textSize="16sp"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/themeColor"/>
    
    <DatePicker 
        android:id="@+id/add_anni_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:headerBackground="@color/themeColor"
		android:minDate="01/01/1940"
		android:calendarTextColor="@color/anniTextColor"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pressColor"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/add_anni_select_date_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_selector"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="@color/anniTextColor"
            android:textStyle="bold"
            android:clickable="true"/>
        <View 
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/pressColor"/>
        <TextView 
            android:id="@+id/add_anni_select_date_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_selector"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@color/anniTextColor"
            android:textStyle="bold"
            android:clickable="true"/>
    </LinearLayout>

</LinearLayout>
